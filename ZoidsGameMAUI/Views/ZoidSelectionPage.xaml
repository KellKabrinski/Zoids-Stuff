<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="ZoidsGameMAUI.Views.ZoidSelectionPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:ZoidsGameMAUI.Models"
             Title="Select Your Zoid">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Header with Credits and Filter -->
        <Grid Grid.Row="0" Padding="15,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <Label Grid.Column="0" 
                   x:Name="CreditsLabel"
                   Text="Credits: 40,000"
                   FontSize="18"
                   FontAttributes="Bold"
                   VerticalOptions="Center" />

            <Picker Grid.Column="1" 
                    x:Name="FilterPicker"
                    Title="Filter by Power"
                    WidthRequest="150"
                    SelectedIndexChanged="OnFilterChanged">
                <Picker.Items>
                    <x:String>All Zoids</x:String>
                    <x:String>Owned Zoids</x:String>
                    <x:String>Power 1-5</x:String>
                    <x:String>Power 6-10</x:String>
                    <x:String>Power 11-15</x:String>
                    <x:String>Power 16+</x:String>
                    <x:String>Affordable</x:String>
                </Picker.Items>
            </Picker>

            <Button Grid.Column="2"
                    x:Name="SortButton"
                    Text="Sort"
                    Clicked="OnSortClicked"
                    Margin="10,0,0,0" />
        </Grid>

        <!-- Zoid List -->
        <CollectionView Grid.Row="1" 
                        x:Name="ZoidCollectionView"
                        SelectionMode="Single"
                        SelectionChanged="OnZoidSelected"
                        BackgroundColor="LightGray">
            
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:ZoidData">
                    <Grid Padding="15" BackgroundColor="White" Margin="5">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <!-- Zoid Name and Power Level -->
                        <Label Grid.Row="0" Grid.Column="0"
                               Text="{Binding Name}"
                               FontSize="20"
                               FontAttributes="Bold" />
                        
                        <Label Grid.Row="0" Grid.Column="1"
                               Text="{Binding PowerLevel, StringFormat='Power: {0}'}"
                               FontSize="16"
                               FontAttributes="Bold"
                               HorizontalOptions="End" />

                        <!-- Stats Row -->
                        <Label Grid.Row="1" Grid.ColumnSpan="2"
                               FontSize="14"
                               Margin="0,5">
                            <Label.FormattedText>
                                <FormattedString>
                                    <Span Text="Fighting: " FontAttributes="Bold" />
                                    <Span Text="{Binding Stats.Fighting}" />
                                    <Span Text=" | Strength: " FontAttributes="Bold" />
                                    <Span Text="{Binding Stats.Strength}" />
                                    <Span Text=" | Dexterity: " FontAttributes="Bold" />
                                    <Span Text="{Binding Stats.Dexterity}" />
                                    <Span Text=" | Agility: " FontAttributes="Bold" />
                                    <Span Text="{Binding Stats.Agility}" />
                                    <Span Text=" | Awareness: " FontAttributes="Bold" />
                                    <Span Text="{Binding Stats.Awareness}" />
                                </FormattedString>
                            </Label.FormattedText>
                        </Label>

                        <!-- Cost and Movement -->
                        <Grid Grid.Row="2" Grid.ColumnSpan="2" Margin="0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            
                            <Label Grid.Column="0"
                                   Text="{Binding Cost, StringFormat='Cost: {0:N0}'}"
                                   FontSize="16"
                                   FontAttributes="Bold"
                                   TextColor="Green" />
                            
                            <Label Grid.Column="1"
                                   FontSize="14"
                                   HorizontalOptions="End">
                                <Label.FormattedText>
                                    <FormattedString>
                                        <Span Text="Land: " FontAttributes="Bold" />
                                        <Span Text="{Binding Movement.Land}" />
                                        <Span Text=" | Water: " FontAttributes="Bold" />
                                        <Span Text="{Binding Movement.Water}" />
                                        <Span Text=" | Air: " FontAttributes="Bold" />
                                        <Span Text="{Binding Movement.Air}" />
                                    </FormattedString>
                                </Label.FormattedText>
                            </Label>
                        </Grid>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <!-- Selected Zoid Details -->
        <Border Grid.Row="2" 
               x:Name="SelectedZoidFrame"
               IsVisible="False"
               BackgroundColor="LightBlue"
               Padding="15"
               Margin="10,5"
               StrokeThickness="2"
               Stroke="DarkBlue">
            
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <Label Grid.Row="0"
                       x:Name="SelectedZoidName"
                       FontSize="22"
                       FontAttributes="Bold"
                       HorizontalOptions="Center" />

                <Label Grid.Row="1"
                       x:Name="SelectedZoidDefenses"
                       FontSize="14"
                       HorizontalOptions="Center"
                       Margin="0,5" />

                <Label Grid.Row="2"
                       x:Name="SelectedZoidPowers"
                       FontSize="12"
                       HorizontalOptions="Center"
                       Margin="0,5" />
            </Grid>
        </Border>

        <!-- Action Buttons -->
        <Grid Grid.Row="3" Padding="15,10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Main Action Buttons -->
            <Button Grid.Row="0" Grid.Column="0"
                    x:Name="SelectForBattleButton"
                    Text="Select for Battle"
                    IsEnabled="False"
                    BackgroundColor="#2E7D32"
                    TextColor="White"
                    Margin="0,0,2.5,5"
                    Clicked="OnSelectForBattleClicked" />

            <Button Grid.Row="0" Grid.Column="1"
                    x:Name="PurchaseButton"
                    Text="Purchase"
                    IsEnabled="False"
                    BackgroundColor="#F57C00"
                    TextColor="White"
                    Margin="2.5,0,0,5"
                    Clicked="OnPurchaseClicked" />

            <!-- Secondary Buttons -->
            <Button Grid.Row="1" Grid.Column="0"
                    x:Name="SaveGameButton"
                    Text="Save Game"
                    BackgroundColor="#9C27B0"
                    TextColor="White"
                    Margin="0,0,2.5,0"
                    Clicked="OnSaveGameClicked" />

            <Button Grid.Row="1" Grid.Column="1"
                    x:Name="BackButton"
                    Text="Back to Menu"
                    BackgroundColor="#616161"
                    TextColor="White"
                    Margin="2.5,0,0,0"
                    Clicked="OnBackClicked" />
        </Grid>
    </Grid>

</ContentPage>
