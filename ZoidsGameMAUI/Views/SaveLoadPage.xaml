<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="ZoidsGameMAUI.Views.SaveLoadPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Save/Load Game">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Padding="15,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <Label Grid.Column="0" 
                   x:Name="HeaderLabel"
                   Text="Select Save File"
                   FontSize="24"
                   FontAttributes="Bold"
                   VerticalOptions="Center" />

            <Button Grid.Column="1"
                    x:Name="NewSaveButton"
                    Text="New Save"
                    BackgroundColor="#4CAF50"
                    TextColor="White"
                    Clicked="OnNewSaveClicked"
                    IsVisible="False"
                    Margin="0,0,10,0" />

            <Button Grid.Column="2"
                    x:Name="BackButton"
                    Text="Back"
                    BackgroundColor="#757575"
                    TextColor="White"
                    Clicked="OnBackClicked" />
        </Grid>

        <!-- Save Files List -->
        <CollectionView Grid.Row="1" 
                        x:Name="SaveFilesCollectionView"
                        SelectionMode="Single"
                        SelectionChanged="OnSaveFileSelected"
                        BackgroundColor="LightGray"
                        Margin="10">
            
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="x:String">
                    <Grid Padding="15" BackgroundColor="White" Margin="5">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <!-- Save File Name -->
                        <Label Grid.Row="0" Grid.Column="0"
                               Text="{Binding}"
                               FontSize="18"
                               FontAttributes="Bold" />
                        
                        <!-- Save Info Placeholder -->
                        <Label Grid.Row="1" Grid.Column="0"
                               x:Name="SaveInfoLabel"
                               Text="Loading save info..."
                               FontSize="14"
                               TextColor="Gray"
                               Margin="0,5,0,0" />

                        <!-- Action Buttons -->
                        <Button Grid.Row="0" Grid.Column="1"
                                Text="Load"
                                BackgroundColor="#2196F3"
                                TextColor="White"
                                FontSize="14"
                                Padding="10,5"
                                Clicked="OnLoadSaveClicked"
                                CommandParameter="{Binding}" />

                        <Button Grid.Row="0" Grid.Column="2"
                                Text="Delete"
                                BackgroundColor="#F44336"
                                TextColor="White"
                                FontSize="14"
                                Padding="10,5"
                                Margin="5,0,0,0"
                                Clicked="OnDeleteSaveClicked"
                                CommandParameter="{Binding}" />
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <!-- No Saves Message -->
        <StackLayout Grid.Row="1" 
                     x:Name="NoSavesMessage"
                     IsVisible="False"
                     VerticalOptions="Center"
                     HorizontalOptions="Center"
                     Padding="20">
            <Label Text="No save files found"
                   FontSize="18"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   TextColor="Gray" />
            <Label Text="Start a new game to create your first save!"
                   FontSize="14"
                   HorizontalOptions="Center"
                   TextColor="Gray"
                   Margin="0,10,0,0" />
        </StackLayout>

        <!-- Action Buttons -->
        <Grid Grid.Row="2" Padding="15,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0"
                    x:Name="QuickSaveButton"
                    Text="Quick Save"
                    BackgroundColor="#FF9800"
                    TextColor="White"
                    FontSize="16"
                    Margin="0,0,5,0"
                    Clicked="OnQuickSaveClicked"
                    IsVisible="False" />

            <Button Grid.Column="1"
                    x:Name="QuickLoadButton"
                    Text="Quick Load"
                    BackgroundColor="#9C27B0"
                    TextColor="White"
                    FontSize="16"
                    Margin="5,0,0,0"
                    Clicked="OnQuickLoadClicked"
                    IsVisible="False" />
        </Grid>
    </Grid>
</ContentPage>
