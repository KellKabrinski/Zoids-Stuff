<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="ZoidsGameMAUI.Views.BattlePage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:ZoidsGameMAUI.Models"
             Title="Battle Arena"
             NavigationPage.HasBackButton="False">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />   <!-- Battle Status -->
            <RowDefinition Height="*" />      <!-- Main Battle Area -->
            <RowDefinition Height="Auto" />   <!-- Action Queue -->
            <RowDefinition Height="Auto" />   <!-- Controls -->
        </Grid.RowDefinitions>

        <!-- Battle Status Header -->
        <Border Grid.Row="0" 
                BackgroundColor="DarkSlateGray"
                Padding="10,5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- Player Zoid Status -->
                <StackLayout Grid.Column="0" HorizontalOptions="Start">
                    <Label x:Name="PlayerZoidName" 
                           Text="Player Zoid"
                           FontSize="18" 
                           FontAttributes="Bold"
                           TextColor="LightBlue" />
                    <Label x:Name="PlayerZoidStatus"
                           Text="HP: 100% | Shield: OFF | Stealth: OFF"
                           FontSize="12"
                           TextColor="White" />
                </StackLayout>

                <!-- Turn Indicator -->
                <StackLayout Grid.Column="1" HorizontalOptions="Center">
                    <Label x:Name="TurnIndicator"
                           Text="Turn 1"
                           FontSize="16"
                           FontAttributes="Bold"
                           TextColor="Yellow"
                           HorizontalOptions="Center" />
                    <Label x:Name="CurrentPhase"
                           Text="Planning Phase"
                           FontSize="12"
                           TextColor="White"
                           HorizontalOptions="Center" />
                </StackLayout>

                <!-- Enemy Zoid Status -->
                <StackLayout Grid.Column="2" HorizontalOptions="End">
                    <Label x:Name="EnemyZoidName"
                           Text="Enemy Zoid" 
                           FontSize="18"
                           FontAttributes="Bold"
                           TextColor="LightCoral" />
                    <Label x:Name="EnemyZoidStatus"
                           Text="HP: 100% | Shield: OFF | Stealth: OFF"
                           FontSize="12"
                           TextColor="White" />
                </StackLayout>
            </Grid>
        </Border>

        <!-- Main Battle Area -->
        <ScrollView Grid.Row="1">
            <Grid Padding="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />   <!-- Distance & Position -->
                    <RowDefinition Height="*" />      <!-- Battle Log -->
                </Grid.RowDefinitions>

                <!-- Distance and Position Info -->
                <Border Grid.Row="0"
                        BackgroundColor="LightGray"
                        Padding="15"
                        Margin="0,0,0,10"
                        StrokeThickness="1"
                        Stroke="Gray">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <StackLayout Grid.Column="0">
                            <Label Text="Battle Situation" 
                                   FontSize="16" 
                                   FontAttributes="Bold" />
                            <Label x:Name="DistanceLabel"
                                   Text="Distance: 1000m"
                                   FontSize="14" />
                            <Label x:Name="RangeLabel"
                                   Text="Range: Mid-Range"
                                   FontSize="14" />
                            <Label x:Name="PredictedDistanceLabel"
                                   Text=""
                                   FontSize="12"
                                   TextColor="Orange"
                                   IsVisible="False" />
                        </StackLayout>

                        <StackLayout Grid.Column="1">
                            <Label Text="Positions" 
                                   FontSize="16" 
                                   FontAttributes="Bold" />
                            <Label x:Name="PlayerPositionLabel"
                                   Text="Player: Neutral (0°)"
                                   FontSize="14"
                                   TextColor="Blue" />
                            <Label x:Name="EnemyPositionLabel"
                                   Text="Enemy: Defensive (180°)"
                                   FontSize="14"
                                   TextColor="Red" />
                        </StackLayout>
                    </Grid>
                </Border>

                <!-- Battle Log -->
                <Border Grid.Row="1"
                        BackgroundColor="Black"
                        Padding="10"
                        StrokeThickness="2"
                        Stroke="DarkGray">
                    <CollectionView x:Name="BattleLogView"
                                    BackgroundColor="Transparent">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Grid Padding="5,2">
                                    <Label Text="{Binding}"
                                           FontSize="12"
                                           TextColor="LightGreen"
                                           FontFamily="Consolas" />
                                </Grid>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </Border>
            </Grid>
        </ScrollView>

        <!-- Action Queue Display -->
        <Border Grid.Row="2"
                BackgroundColor="DarkBlue"
                Padding="10,5"
                IsVisible="{Binding HasQueuedActions}">
            <StackLayout>
                <Label Text="Queued Actions:"
                       FontSize="14"
                       FontAttributes="Bold"
                       TextColor="White" />
                <CollectionView x:Name="ActionQueueView"
                                HeightRequest="60"
                                ItemsLayout="HorizontalList">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Border BackgroundColor="Navy"
                                    Padding="8,4"
                                    Margin="2"
                                    StrokeThickness="1"
                                    Stroke="LightBlue">
                                <Label Text="{Binding}"
                                       FontSize="10"
                                       TextColor="White"
                                       HorizontalOptions="Center" />
                            </Border>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </StackLayout>
        </Border>

        <!-- Control Panels -->
        <Grid Grid.Row="3" Padding="10" BackgroundColor="DimGray">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!-- Action Buttons Row 1 -->
            <Grid Grid.Row="0" Margin="0,0,0,5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0"
                        x:Name="AttackButton"
                        Text="Attack"
                        BackgroundColor="DarkRed"
                        TextColor="White"
                        Margin="2"
                        Clicked="OnAttackClicked" />

                <Button Grid.Column="1"
                        x:Name="MoveButton" 
                        Text="Move"
                        BackgroundColor="DarkOrange"
                        TextColor="White"
                        Margin="2"
                        Clicked="OnMoveClicked" />

                <Button Grid.Column="2"
                        x:Name="ShieldButton"
                        Text="Shield"
                        BackgroundColor="DarkBlue"
                        TextColor="White"
                        Margin="2"
                        Clicked="OnShieldClicked" />

                <Button Grid.Column="3"
                        x:Name="StealthButton"
                        Text="Stealth"
                        BackgroundColor="DarkGreen"
                        TextColor="White"
                        Margin="2"
                        Clicked="OnStealthClicked" />
            </Grid>

            <!-- Action Buttons Row 2 -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0"
                        x:Name="ClearActionsButton"
                        Text="Clear Actions"
                        BackgroundColor="Gray"
                        TextColor="White"
                        Margin="2"
                        Clicked="OnClearActionsClicked" />

                <Button Grid.Column="1"
                        x:Name="EndTurnButton"
                        Text="End Turn"
                        BackgroundColor="Purple"
                        TextColor="White"
                        FontAttributes="Bold"
                        Margin="2"
                        Clicked="OnEndTurnClicked" />

                <Button Grid.Column="2"
                        x:Name="ExitBattleButton"
                        Text="Exit Battle"
                        BackgroundColor="DarkSlateGray"
                        TextColor="White"
                        Margin="2"
                        Clicked="OnExitBattleClicked" />
            </Grid>
        </Grid>
    </Grid>

</ContentPage>
