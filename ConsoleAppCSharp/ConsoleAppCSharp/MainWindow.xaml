<Window x:Class="ZoidsBattle.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Zoids Battle Game" Height="700" Width="1000"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Title -->
        <TextBlock Grid.Row="0" Text="Zoids Battle Game" 
                   FontSize="28" FontWeight="Bold" 
                   HorizontalAlignment="Center" 
                   Margin="20" 
                   Foreground="DarkBlue"/>
        
        <!-- Main Content Area -->
        <Grid Grid.Row="1" Margin="20">
            <!-- Setup Screen -->
            <StackPanel x:Name="SetupPanel" Visibility="Visible">
                <TextBlock Text="Battle Setup" FontSize="20" FontWeight="Bold" Margin="0,0,0,20"/>
                
                <GroupBox Header="Battle Terrain" Margin="0,0,0,20">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                        <RadioButton x:Name="LandRadio" Content="Land" IsChecked="True" Margin="20,0"/>
                        <RadioButton x:Name="WaterRadio" Content="Water" Margin="20,0"/>
                        <RadioButton x:Name="AirRadio" Content="Air" Margin="20,0"/>
                    </StackPanel>
                </GroupBox>
                
                <GroupBox Header="Game Mode" Margin="0,0,0,20">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                        <RadioButton x:Name="PvPRadio" Content="Player vs Player" IsChecked="True" Margin="20,0"/>
                        <RadioButton x:Name="AIRadio" Content="Player vs AI" Margin="20,0"/>
                    </StackPanel>
                </GroupBox>
                
                <Button x:Name="StartGameButton" Content="Start Game" 
                        Click="StartGame_Click" 
                        HorizontalAlignment="Center" 
                        Padding="20,10" 
                        FontSize="16" 
                        Margin="0,20"/>
            </StackPanel>
            
            <!-- Zoid Selection Screen -->
            <Grid x:Name="ZoidSelectionPanel" Visibility="Collapsed">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="300"/>
                </Grid.ColumnDefinitions>
                
                <GroupBox Grid.Column="0" Header="Available Zoids" Margin="0,0,10,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <TextBlock x:Name="PlayerSelectionText" Grid.Row="0" 
                                   Text="Player 1: Choose your Zoid" 
                                   FontSize="16" FontWeight="Bold" 
                                   Margin="10"/>
                        
                        <DataGrid x:Name="ZoidListGrid" Grid.Row="1" 
                                  AutoGenerateColumns="False" 
                                  IsReadOnly="True" 
                                  SelectionMode="Single"
                                  SelectionChanged="ZoidListGrid_SelectionChanged"
                                  Margin="10">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
                                <DataGridTextColumn Header="Power Level" Binding="{Binding PowerLevel}" Width="80"/>
                                <DataGridTextColumn Header="Cost" Binding="{Binding Cost}" Width="80"/>
                                <DataGridTextColumn Header="Land Speed" Binding="{Binding Movement.Land}" Width="80"/>
                                <DataGridTextColumn Header="Water Speed" Binding="{Binding Movement.Water}" Width="80"/>
                                <DataGridTextColumn Header="Air Speed" Binding="{Binding Movement.Air}" Width="80"/>
                            </DataGrid.Columns>
                        </DataGrid>
                        
                        <Button x:Name="SelectZoidButton" Grid.Row="2" 
                                Content="Select This Zoid" 
                                Click="SelectZoid_Click" 
                                HorizontalAlignment="Center" 
                                Padding="15,8" 
                                Margin="10" 
                                IsEnabled="False"/>
                    </Grid>
                </GroupBox>
                
                <GroupBox Grid.Column="1" Header="Zoid Details">
                    <ScrollViewer>
                        <StackPanel x:Name="ZoidDetailsPanel" Margin="10">
                            <TextBlock Text="Select a Zoid to view details" 
                                       FontStyle="Italic" 
                                       HorizontalAlignment="Center" 
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                    </ScrollViewer>
                </GroupBox>
            </Grid>
            
            <!-- Battle Screen -->
            <Grid x:Name="BattlePanel" Visibility="Collapsed">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                    <TextBlock x:Name="Player1ZoidText" Text="Player 1: " FontSize="16" FontWeight="Bold"/>
                    <TextBlock Text=" vs " FontSize="16" Margin="10,0"/>
                    <TextBlock x:Name="Player2ZoidText" Text="Player 2: " FontSize="16" FontWeight="Bold"/>
                </StackPanel>
                
                <ScrollViewer Grid.Row="1" Margin="10">
                    <TextBox x:Name="BattleLogTextBox" 
                             IsReadOnly="True" 
                             TextWrapping="Wrap" 
                             FontFamily="Consolas" 
                             FontSize="12"
                             Background="Black"
                             Foreground="LimeGreen"
                             Padding="10"/>
                </ScrollViewer>
                
                <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                    <Button x:Name="NewBattleButton" Content="New Battle" 
                            Click="NewBattle_Click" 
                            Padding="15,8" 
                            Margin="5" 
                            Visibility="Collapsed"/>
                    <Button x:Name="ExitButton" Content="Exit" 
                            Click="Exit_Click" 
                            Padding="15,8" 
                            Margin="5"/>
                </StackPanel>
            </Grid>
        </Grid>
        
        <!-- Status Bar -->
        <StatusBar Grid.Row="2">
            <StatusBarItem>
                <TextBlock x:Name="StatusText" Text="Ready"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
